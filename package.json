{
  "name": "pregchat",
  "version": "1.0.0",
  "description": "Pregnancy Wellness Chatbot with MERN stack",
  "main": "server/server.js",
  "scripts": {
    "start": "node server/server.js",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd server && npm run dev",
    "client": "cd client && npm run dev",
    "test:server": "cd server && jest --runInBand",
    "test:client": "cd client && vitest",
    "test:unit": "cd server && jest --config jest.unit.config.js --runInBand",
    "test:integration": "cd server && jest --config jest.integration.config.js --runInBand",
    "e2e": "jest --config jest.e2e.config.js --runInBand",
    "install-server": "npm install && cd server && npm install",
    "seed:store": "node server/seed/store.seed.js",
    "test": "jest --watchAll server"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "concurrently": "^8.2.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "groq-sdk": "^0.3.3",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.3",
    "nodemon": "^3.0.0"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "mongodb-memory-server": "^10.1.4",
    "playwright": "^1.43.0",
    "supertest": "^6.3.3",
    "vitest": "^1.0.0"
  },
  "keywords": [
    "pregnancy",
    "chatbot",
    "mern",
    "groq"
  ],
  "author": "",
  "license": "ISC",
  "engines": {
    "node": "20.x"
  }
}
